              });
              $('#membergteqcreated_atPicker').on("dp.change", function (e) {
                  $('#memberlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#memberlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#membergteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Party Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='partygteqcreated_atPicker'>
