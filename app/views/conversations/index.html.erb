<div class="form-group">
      <%= f.label :ppm_name_cont, "Pnm name contains" %>
      <%= f.text_field :ppm_name_cont, :class => "form-control", :placeholder => "Pnm name contains" %>
    </div>

<div class="form-group">
      <%= f.label :bump_group_letter_cont, "BumpGroup letter contains" %>
      <%= f.text_field :bump_group_letter_cont, :class => "form-control", :placeholder => "BumpGroup letter contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/conversations" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#conversations_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Party</th>
        <th>Member</th>
        <th>Pnm</th>
        <th>Actions</th>
      </tr>

      <% @conversations.each do |conversation| %>
      <tr>
        <td>
          <% if conversation.party.present? %>
            <a href="/parties/<%= conversation.party.id %>">
              <%= conversation.party.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if conversation.member.present? %>
            <a href="/members/<%= conversation.member.id %>">
              <%= conversation.member.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if conversation.ppm.present? %>
            <a href="/pnms/<%= conversation.ppm.id %>">
              <%= conversation.ppm.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/conversations/<%= conversation.id %>" class="btn btn-primary">Show</a>
          <a href="/conversations/<%= conversation.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_conversation/<%= conversation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @conversations, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
