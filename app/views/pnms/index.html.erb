<div class="page-header">
  <h1>
    Pnms
    <a href="/pnms/new" class="btn btn-lg btn-success">New Pnm</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "pnms_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
    <%= f.label :year_cont, "Year contains" %>
    <%= f.text_field :year_cont, :class => "form-control", :placeholder => "Year contains" %>
  </div>

<div class="form-group">
    <%= f.label :hometown_cont, "Hometown contains" %>
    <%= f.text_field :hometown_cont, :class => "form-control", :placeholder => "Hometown contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "Party Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='partygteqcreated_atPicker'>
                  <%= f.text_field :party_created_at_gteq, :class => "form-control", :placeholder => "Party Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='partylteqcreated_atPicker'>
                  <%= f.text_field :party_created_at_lteq, :class => "form-control", :placeholder => "Party Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#partygteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#partylteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#partygteqcreated_atPicker').on("dp.change", function (e) {
                  $('#partylteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#partylteqcreated_atPicker').on("dp.change", function (e) {
                  $('#partygteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Member Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='membersgteqcreated_atPicker'>
                  <%= f.text_field :members_created_at_gteq, :class => "form-control", :placeholder => "Member Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='memberslteqcreated_atPicker'>
                  <%= f.text_field :members_created_at_lteq, :class => "form-control", :placeholder => "Member Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#membersgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#memberslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#membersgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#memberslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#memberslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#membersgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/pnms" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#pnms_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Hometown</th>
        <th>Year</th>
        <th>Party</th>
        <th>Actions</th>
      </tr>

      <% @pnms.each do |pnm| %>
      <tr>
        <td><%= pnm.name %></td>
        <td><%= pnm.hometown %></td>
        <td><%= pnm.year %></td>
        <td>
          <% if pnm.party.present? %>
            <a href="/parties/<%= pnm.party.id %>">
              <%= pnm.party.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/pnms/<%= pnm.id %>" class="btn btn-primary">Show</a>
          <a href="/pnms/<%= pnm.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_pnm/<%= pnm.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @pnms, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
