<div class="page-header">
  <h1>
    Bump groups
    <a href="/bump_groups/new" class="btn btn-lg btn-success">New Bump group</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Letter</th>
        <th>Actions</th>
      </tr>

      <% @bump_groups.each do |bump_group| %>
      <tr>
        <td><%= bump_group.letter %></td>
        <td>
          <a href="/bump_groups/<%= bump_group.id %>" class="btn btn-primary">Show</a>
          <a href="/bump_groups/<%= bump_group.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bump_group/<%= bump_group.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @bump_groups, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
