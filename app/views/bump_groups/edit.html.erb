<!-- Validation failure messages -->
<% if @bump_group.errors.any? %>
  <% @bump_group.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Bump Group #<%= @bump_group.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_bump_group/<%= @bump_group.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for letter -->
      <div class="form-group">
        <label for="letter" class="control-label">
          Letter
        </label>

        <input type="text" id="letter" name="letter" placeholder="Letter" class="form-control" value="<%= @bump_group.letter %>">
      </div>

      <button class="btn btn-warning">
        Update Bump Group
      </button>
      or
      <a href="/bump_groups/<%= @bump_group.id %>">Cancel</a>
    </form>
  </div>
</div>
