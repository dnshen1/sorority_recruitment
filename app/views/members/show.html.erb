<div class="page-header">
  <h3>Member #<%= @member.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @member.name %></dd>

      <dt>Bump group</dt>
      <dd>
        <% if @member.bump_group.present? %>
          <a href="/bump_groups/<%= @member.bump_group_id %>">
            <%= @member.bump_group.letter %>
          </a>
        <% end %>
      </dd>

      <dt>Group number</dt>
      <dd><%= @member.group_number %></dd>

      <dt>Email</dt>
      <dd><%= @member.email %></dd>

      <dt>Password</dt>
      <dd><%= @member.password %></dd>

      <dt>Hometown</dt>
      <dd><%= @member.hometown %></dd>

      <dt>Year</dt>
      <dd><%= @member.year %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/members" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A Member has many conversations -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Conversations
      </li>

      <% @member.conversations.each do |conversation| %>
        <li class="list-group-item">
          <a href="/conversations/<%= conversation.id %>">
            <%= conversation.party_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/conversations/<%= conversation.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/conversations/<%= conversation.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_conversation/<%= conversation.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Member has many ppms -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Ppms
      </li>

      <% @member.ppms.each do |pnm| %>
        <li class="list-group-item">
          <a href="/pnms/<%= pnm.id %>">
            <%= pnm.name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/pnms/<%= pnm.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/pnms/<%= pnm.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_pnm/<%= pnm.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
